<html>
  <body>
    <h2>Tweet</h2>
    <%= @tweet.content %>
    <form action="/tweets/<%= @tweet.id %>/edit" method="GET">
		  <input type="submit" value="Edit Tweet" />
	  </form>
	  <br>
    <form action="/tweets/<%= @tweet.id %>/delete" method="POST">
		  <input id="hidden" type="hidden" name="_method" value="delete"/>
		  <input type="submit" value="Delete Tweet" />
	  </form>	
    <br>
    <form action="/tweets" method="GET">
		  <input type="submit" value="All Tweets" />
	  </form>
  </body>
</html>